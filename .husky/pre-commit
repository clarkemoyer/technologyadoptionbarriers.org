#!/bin/sh
# Auto-format code before committing

# Check if there are any staged files
if ! git diff --cached --quiet; then
  echo "ğŸ”§ Running prettier to format code..."
  
  # Run prettier on all files (formats entire repository)
  npm run format || {
    echo "âŒ Failed to run prettier. Please check your installation."
    exit 1
  }

  # Re-stage files that were originally staged
  # Use null-terminated output to handle filenames with spaces/special characters
  git diff --cached --name-only --diff-filter=ACMR -z | xargs -0 git add
  if [ $? -ne 0 ]; then
    echo "âŒ Failed to re-stage some formatted files. Please run 'git add' manually and retry the commit."
    exit 1
  fi
fi

# Run linting
npm run lint || {
  echo "âŒ Linting errors detected. Please fix the errors and try again."
  exit 1
}

echo "âœ… Pre-commit checks passed."
