#!/bin/sh
# Auto-format code before committing
echo "üîß Running prettier to format code..."

# Get list of staged files before formatting (including renamed files)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

# Run prettier on all files (formats entire repository)
npm run format || {
  echo "‚ùå Failed to run prettier. Please check your installation."
  exit 1
}

# Re-stage only the files that were originally staged
if [ -n "$STAGED_FILES" ]; then
  # Use null-terminated strings to handle filenames with spaces/special characters
  git diff --cached --name-only --diff-filter=ACMR -z | xargs -0 git add
  if [ $? -ne 0 ]; then
    echo "‚ùå Failed to re-stage some formatted files. Please run 'git add' manually and retry the commit."
    exit 1
  fi
fi

# Run linting
npm run lint || {
  echo "‚ùå Linting errors detected. Please fix the errors and try again."
  exit 1
}

echo "‚úÖ Pre-commit checks passed! Code has been formatted."
