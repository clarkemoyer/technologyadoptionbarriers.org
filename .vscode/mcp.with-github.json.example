{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "qualtrics-surveys": {
      "type": "http",
      "url": "https://<your-qualtrics-host>/API/mcp/survey-crud",
      "headers": {
        "Accept": "application/json, text/event-stream",
        "Authorization": "Bearer ${input:qualtrics_oauth_token}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "qualtrics_oauth_token",
      "description": "Qualtrics OAuth access token (Bearer)",
      "password": true
    }
  ]
}
