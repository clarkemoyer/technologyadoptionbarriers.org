{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "X-MCP-Toolsets": "repos,issues,users,pull_requests,code_security,secret_protection,actions,web_search",
        "Authorization": "Bearer ${input:github_pat}"
      }
    },
    "qualtrics-surveys": {
      "type": "http",
      "url": "https://<your-qualtrics-host>/API/mcp/survey-crud",
      "headers": {
        "Accept": "application/json, text/event-stream",
        "Authorization": "Bearer ${input:qualtrics_oauth_token}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_pat",
      "description": "GitHub Personal Access Token (PAT) used as a Bearer token for the GitHub MCP server",
      "password": true
    },
    {
      "type": "promptString",
      "id": "qualtrics_oauth_token",
      "description": "Qualtrics OAuth access token (Bearer)",
      "password": true
    }
  ]
}
